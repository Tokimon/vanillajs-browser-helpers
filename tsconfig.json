{
  "compilerOptions": {
    "outDir": ".",
    "module": "es2015",
    "target": "es5",
    "lib": ["dom", "es5", "es6", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020"],
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "allowJs": false,
    "strictNullChecks": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": [
    "./src/*.ts"
  ],

  "exclude": [
    "node_modules"
  ]
}